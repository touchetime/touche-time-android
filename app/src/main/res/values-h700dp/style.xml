<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Scoreboard Custom View-->
    <style name="ScoreboardContainer">
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
    </style>

    <style name="ButtonScore" parent="@style/DmSansBoldLargeWhite">
        <item name="android:layout_width">@dimen/spacing_xxx_large</item>
        <item name="android:layout_height">@dimen/spacing_xxx_large</item>
    </style>

    <style name="FoulContainer">
        <item name="android:layout_marginBottom">@dimen/foul_container_margin_bottom_big</item>
    </style>

    <!-- Chronometer View -->
    <style name="TextChronometer">
        <item name="android:layout_marginEnd">@dimen/spacing_tiny</item>
    </style>

    <!-- More Score Dialog FullScreen -->
    <style name="AddMoreScoreInMoreScoreDialog" parent="ScoreboardContainer">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="RemoveMoreScoreInMoreScoreDialog" parent="ScoreboardContainer">
        <item name="android:layout_marginBottom">-48dp</item>
    </style>
</resources>