<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_ripple_effect">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape>
                    <solid android:color="@color/orange_primary" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/orange_secondary" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/orange_secondary" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>