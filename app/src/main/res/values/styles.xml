<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>

        <item name="background">@color/color_default_background</item>
        <item name="android:colorBackground">@color/color_default_background</item>
        <item name="android:windowBackground">@color/color_default_background</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TextViewBasic">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Inter -->
    <style name="InterSmallGraySecondary">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/gray_secondary</item>
        <item name="fontFamily">@font/inter_light</item>
        <item name="android:textSize">@dimen/font_title_small</item>
    </style>

    <style name="InterMediumNormalWhite" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/font_title_normal</item>
    </style>

    <style name="InterMediumFoulWhite" parent="InterMediumNormalWhite">
        <item name="android:textSize">@dimen/font_foul_size</item>
    </style>

    <style name="InterBoldNormalWhite" parent="TextViewBasic">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_title_normal</item>
    </style>

    <style name="InterBoldXLargeWhite" parent="TextViewBasic">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_title_x_large</item>
    </style>

    <style name="InterBoldScoreWhite" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_score_size_big_screen</item>
    </style>

    <!-- Ds Digi -->
    <style name="DsDigiBoldChronometerWhite" parent="TextViewBasic">
        <item name="android:fontFamily">@font/ds_digi_b</item>
        <item name="android:textSize">@dimen/font_chronometer_scoreboard_size</item>
        <item name="android:layout_marginEnd">@dimen/spacing_middle</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <!-- DM Sans -->
    <style name="DmSansRegularTinyWhite" parent="TextViewBasic">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">@dimen/font_title_tiny</item>
    </style>

    <style name="DmSansBoldNormalWhite" parent="TextViewBasic">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">@dimen/font_title_normal</item>
    </style>

    <style name="DmSansRegularMediumWhite" parent="TextViewBasic">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">@dimen/font_title_medium</item>
    </style>

    <style name="DmSansBoldLargeWhite" parent="TextViewBasic">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">@dimen/font_title_large</item>
    </style>

    <!-- Scoreboard Custom View-->
    <style name="ScoreboardContainer">
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
    </style>

    <style name="ButtonScore">
        <item name="android:layout_width">@dimen/spacing_xx_large</item>
        <item name="android:layout_height">@dimen/spacing_xx_large</item>
    </style>

    <!-- Chronometer View -->
    <style name="TextChronometer">
        <!--        <item name="android:layout_marginEnd">3dp</item>-->
    </style>
</resources>